<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="30 seconds">

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36}:%L - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>D://EnvDevs//Perso//budget.log</file>
		<append>false</append>
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%L - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE-SERVICES" class="ch.qos.logback.core.FileAppender">
		<file>D://EnvDevs//Perso//budget-services.log</file>
		<append>false</append>
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%L - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE-IHM" class="ch.qos.logback.core.FileAppender">
		<file>D://EnvDevs//Perso//budget-ihm.log</file>
		<append>false</append>
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%L - %msg%n
			</pattern>
		</encoder>
	</appender>
	<logger name="root" level="INFO" />
	<logger name="org.hibernate" level="INFO" />
	<logger name="org.mongodb.driver" level="INFO" />
	<logger name="org.springframework" level="INFO" />	
	<logger name="org.quartz" level="INFO" />


	<!-- COMMUNS -->
	<logger name="com.terrier.finances.gestion.communs" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />		
	</logger>	
	<!-- IHM -->
	<logger name="com.terrier.finances.gestion.ui" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE-IHM" />
	</logger>
	<!-- services -->
	<logger name="com.terrier.finances.gestion.services" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE-SERVICES" />
	</logger>
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>
