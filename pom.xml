		</dependency>

	</dependencies>

	<repositories>
		<repository>
			<id>github</id>
			<url>https://maven.pkg.github.com/vzwingma/gestion-budget-communs</url>
		</repository>
		<repository>
			<id>m2</id>
			<url>https://mvnrepository.com/artifact</url>
		</repository>
	</repositories>

</project>